<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_10"
    tools:context="com.taxitime.rideo.Activities.otpscreen">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_arrow_whi_black_24dp" />
        <TextView
            android:paddingStart="30sp"
            android:layout_weight="0.80"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/verification"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/cdo"
            android:layout_weight="0.10"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="1dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginStart="100dp"
                            android:layout_marginEnd="100dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/img_number_verification" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/verify_your_number"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                            android:textColor="@color/grey_80"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:layout_width="280dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:text="@string/please_enter_your_mobile_number_to_receive_a_verification_code"-->
<!--                            android:gravity="center"-->
<!--                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"-->
<!--                            android:textColor="@color/grey_60" />-->

                        <LinearLayout
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:id="@+id/phonenum_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_background">

                            <com.hbb20.CountryCodePicker
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:id="@+id/cpp"
                                app:ccp_textSize="15sp"
                                app:ccp_autoDetectCountry="true"
                                android:layout_weight="0.30"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp" />


                            <EditText
                                android:background="@android:color/transparent"
                                android:id="@+id/idphone"
                                android:gravity="start"
                                android:layout_width="0dp"
                                android:layout_weight="0.80"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:textSize="15sp"
                                android:hint="@string/phone_number"
                                android:inputType="phone"
                                android:padding="10dp" />

                        </LinearLayout>



                        <Button
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/login_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/button_shape"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="continue"
                            android:textColor="@color/black_text_color"
                            android:textSize="20sp"
                            android:visibility="visible"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/verify_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="1dp"
                    android:visibility="gone"
                    app:cardCornerRadius="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <ImageView
                            android:layout_marginStart="100dp"
                            android:layout_marginEnd="100dp"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/img_code_verification" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/enter_your_pin"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <com.chaos.view.PinView
                            android:id="@+id/pinView"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:cursorVisible="true"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="#222222"
                            android:textSize="18sp"
                            app:cursorColor="@color/colorPrimary"
                            app:cursorWidth="2dp"
                            app:itemCount="6"
                            app:itemHeight="48dp"
                            app:itemRadius="4dp"
                            app:itemSpacing="5dp"
                            app:itemWidth="36dp"
                            app:lineColor="@color/colorPrimary"
                            app:lineWidth="2dp"
                            app:viewType="rectangle" />
                        <Button
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/button_shape"
                            android:paddingStart="30dp"
                            android:paddingEnd="30dp"
                            android:text="Continue"
                            android:textColor="@color/black_text_color"
                            android:textSize="20sp"
                            android:visibility="visible"
                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/send_again"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="20dp"
                            android:text="I didn't get a code"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>